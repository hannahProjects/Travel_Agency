<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.user.android5777_3372_8622_01.Controller.AddBusiness">
    <!-- android:background="@drawable/mypi"-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/businessId"
        android:inputType="number"
        android:hint="Business Id" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/businessName"
        android:hint="Business Name" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/businessAddress"
            android:text="ADDRESS: "/>

        <EditText
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/businessCountry"
            android:hint="country" />

        <EditText
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/businessCity"
            android:hint="city" />

        <EditText
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/businessStreet"
            android:hint="street" />

        <EditText
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/businessNumber"
            android:inputType="number"
            android:hint="house number" />


    </GridLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/businessPhone"
        android:inputType="number"
        android:hint="Business Phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/businessEmail"
        android:hint="Business Email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/businessWebsite"
        android:hint="Business Website" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/saveButton"
        android:text="save"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </GridLayout>


</LinearLayout>
